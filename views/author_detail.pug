extends layout

block content

    h1 Author: #{author.name}
    p 
        if author.date_of_birth && author.date_of_death
            |   (#{author.birth_formatted} - #{author.death_formatted})
        else if author.date_of_birth && !author.date_of_death
            |   (Born: #{author.birth_formatted})
        else
            |   (No data available)

    div(style='margin-left:20px; margin-top:20px')

        h4 Books

        dl
            each book in author_books
                dt
                    a(href=book.url) #{book.title}
                dd #{book.summary}

            else
                p This author has no books

